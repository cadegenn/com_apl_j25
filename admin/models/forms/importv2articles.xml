<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_apl/models/rules"
>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="type"
			type="text"
			label="COM_APL_CATEGORIE_LABEL"
			description="COM_APL_CHANTIER_DESC"
			size="40"
			class="inputbox validate-nom"
			validate="nom"
			required="true"
			default=""
		/>
		<field
			name="rubrique"
			type="integer"
			label="COM_APL_SOUS_CATEGORIE_LABEL"
			description="COM_APL_SOUS_CATEGORIE_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="titre"
			type="text"
			label="COM_APL_TITRE_LABEL"
			description="COM_APL_TITRE_DESC"
			size="1"
			class="inputbox"
			default=""
		/>
		<field
			name="date"
			type="calendar"
			label="COM_APL_DATE_LABEL"
			description="COM_APL_DATE_DESC"
			size="1"
			class=""
			default=""
		/>
		<field
			name="message"
			type="textarea"
			label="COM_APL_MESSAGE_LABEL"
			description="COM_APL_MESSAGE_DESC"
			size="20"
			class=""
			default=""
		/>
		<field
			name="auteur"
			type="text"
			label="JAUTHOR"
			description="JFIELD_METADATA_AUTHOR_DESC"
			size="1"
			class="inputbox"
			default=""
		/>
		<field
			name="visible"
			type="select"
			label="COM_APL_STATUS_LABEL"
			description="COM_APL_CHANTIER_STATUS_DESC"
			size="1"
			class="checkbox"
			default=""
		/>
		<field
			name="urgence"
			type="select"
			label="COM_APL_URGENCE_LABEL"
			description="COM_APL_URGENCE_DESC"
			size="1"
			class="checkbox"
			default=""
		/>
	</fieldset>
</form>
