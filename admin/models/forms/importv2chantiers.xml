<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_apl/models/rules"
>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="nom"
			type="text"
			label="COM_APL_NOM_LABEL"
			description="COM_APL_CHANTIER_NOM_DESC"
			size="40"
			class="inputbox validate-nom"
			validate="nom"
			required="true"
			default=""
		/>
		<field
			name="lieu"
			type="text"
			label="COM_APL_CHANTIER_LIEU_LABEL"
			description="COM_APL_CHANTIER_LIEU_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="categorie"
			type="category"
			label="COM_APL_CATEGORIE_LABEL"
			description="COM_APL_CHANTIER_CATEGORIE_DESC"
			size="1"
			class="inputbox"
			default=""
		/>
		<field
			name="visible"
			type="select"
			label="COM_APL_STATUS_LABEL"
			description="COM_APL_CHANTIER_STATUS_DESC"
			size="1"
			class="checkbox"
			default=""
		/>
		<field
			name="pays"
			type="span"
			label="COM_APL_PAYS_LABEL"
			description="COM_APL_PAYS_DESC"
			size="20"
			class="span"
			default=""
		/>
	</fieldset>
</form>
