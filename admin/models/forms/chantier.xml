<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="nom"
			type="text"
			label="COM_APL_NOM_LABEL"
			description="COM_APL_CHANTIER_NOM_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="sous_titre"
			type="text"
			label="COM_APL_SOUSTITRE_LABEL"
			description="COM_APL_CHANTIER_SOUSTITRE_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="lieu"
			type="text"
			label="COM_APL_CHANTIER_LIEU_LABEL"
			description="COM_APL_CHANTIER_LIEU_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="adresse"
			type="text"
			label="COM_APL_CHANTIER_ADRESSE_LABEL"
			description="COM_APL_CHANTIER_ADRESSE_DESC"
			size="100"
			class="inputbox"
			default=""
		/>
		<field
			name="catid"
			type="select"
			label="COM_APL_CATEGORIE_LABEL"
			description="COM_APL_CHANTIER_CATEGORIE_DESC"
			size="1"
			class="inputbox"
			default=""
		/>
		<field
			name="glat"	type="hidden"
			label="COM_APL_GLAT_LABEL" description="COM_APL_GLAT_DESC"
			class="blue" readonly="true"
		/>
		<field
			name="glng"	type="hidden"
			label="COM_APL_GLNG_LABEL" description="COM_APL_GLNG_DESC"
			class="blue" readonly="true"
		/>
		<field
			name="countrycode" type="hidden"
			label="COM_APL_COUNTRYCODE_LABEL" description="COM_APL_COUNTRYCODE_DESC"
			class="blue" readonly="true"
		/>
		<field
			name="pays" type="hidden"
			label="COM_APL_PAYS_LABEL" description="COM_APL_PAYS_DESC"
			class="blue" readonly="true"
		/>
		<field
			name="organisateurs"
			type="textarea"
			label="COM_APL_CHANTIER_ORGANISATEURS_LABEL"
			description="COM_APL_CHANTIER_ORGANISATEURS_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="contexte"
			type="textarea"
			label="COM_APL_CHANTIER_CONTEXTE_LABEL"
			description="COM_APL_CHANTIER_CONTEXTE_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="actions"
			type="textarea"
			label="COM_APL_CHANTIER_ACTIONS_LABEL"
			description="COM_APL_CHANTIER_ACTIONS_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="benevole"
			type="textarea"
			label="COM_APL_CHANTIER_BENEVOLE_LABEL"
			description="COM_APL_CHANTIER_BENEVOLE_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="date_debut"
			type="calendar"
			label="COM_APL_CHANTIER_DATEDEBUT_LABEL"
			description="COM_APL_CHANTIER_DATEDEBUT_DESC"
			size="40"
			class="date"
			default=""
		/>
		<field
			name="date_fin"
			type="calendar"
			label="COM_APL_CHANTIER_DATEFIN_LABEL"
			description="COM_APL_CHANTIER_DATEFIN_DESC"
			size="40"
			class="date"
			default=""
		/>
		<field
			name="date_exacte"
			type="radio"
			label="COM_APL_CHANTIER_DATEEXACTE_LABEL"
			description="COM_APL_CHANTIER_DATEEXACTE_DESC"
			class="radiobox"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="date_text"
			type="textarea"
			label="COM_APL_CHANTIER_DATETEXT_LABEL"
			description="COM_APL_CHANTIER_DATETEXT_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="profile"
			type="textarea"
			label="COM_APL_CHANTIER_PROFILE_LABEL"
			description="COM_APL_CHANTIER_PROFILE_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="cout"
			type="text"
			label="COM_APL_CHANTIER_COUT_LABEL"
			description="COM_APL_CHANTIER_COUT_DESC"
			size="20"
			class="prix"
			default=""
		/>
		<field
			name="cout_text"
			type="textarea"
			label="COM_APL_CHANTIER_COUTTEXT_LABEL"
			description="COM_APL_CHANTIER_COUTTEXT_DESC"
			size="100" rows="10"
			class="textarea"
			default=""
		/>
		<field
			name="fiche_info"
			type="text" preview="false"
			label="COM_APL_CHANTIER_FICHEINFO_LABEL"
			description="COM_APL_CHANTIER_FICHEINFO_DESC"
			size="30"
			class="file"
			default=""
		/>
		<field
			name="fiche_inscription"
			type="text" preview="false"
			label="COM_APL_CHANTIER_FICHEINSCRIPTION_LABEL"
			description="COM_APL_CHANTIER_FICHEINSCRIPTION_DESC"
			size="30"
			class="file"
			default=""
		/>
		<field
			name="fiche_custom"
			type="text" preview="false"
			label="COM_APL_CHANTIER_FICHECUSTOM_LABEL"
			description="COM_APL_CHANTIER_FICHECUSTOM_DESC"
			size="30"
			class="file"
			default=""
		/>
		<field
			name="test"
			type="radio"
			label="COM_APL_CHANTIER_TEST_LABEL"
			description="COM_APL_CHANTIER_TEST_DESC"
			class="radiobox"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="complet"
			type="radio"
			label="COM_APL_CHANTIER_COMPLET_LABEL"
			description="COM_APL_CHANTIER_COMPLET_DESC"
			class="radiobox"
			default="0"
			filter="integer"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="published" type="list" label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC" class="inputbox"
				filter="intval" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="publish_up"
			type="calendar"
			label="COM_APL_PUBLISHUP_LABEL"
			description="COM_APL_PUBLISHUP_DESC"
			size="40"
			class="date"
			default=""
		/>
		<field
			name="publish_down"
			type="calendar"
			label="COM_APL_PUBLISHDOWN_LABEL"
			description="COM_APL_PUBLISHDOWN_DESC"
			size="40"
			class="date"
			default=""
		/>
	</fieldset>
</form>
